# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Configuration
S3_BUCKET=karaka-rag-jobs
S3_REGION=us-east-1

# SageMaker Endpoints
SAGEMAKER_NEMOTRON_ENDPOINT=nemotron-karaka-endpoint
SAGEMAKER_EMBEDDING_ENDPOINT=embedding-karaka-endpoint

# Neo4j Configuration
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# Kāraka Configuration
CONFIDENCE_THRESHOLD=0.8
ENTITY_SIMILARITY_THRESHOLD=0.85

# Kāraka Types (comma-separated)
KARAKA_TYPES=KARTA,KARMA,KARANA,SAMPRADANA,ADHIKARANA,APADANA
